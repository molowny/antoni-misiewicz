.action-button
  %a{:href => "/pdf/apel.pdf"}= t 'about.button'

.wraper.clr
  %p.lead= t 'contact.contact_header' 
  .clr.contact 
    .col2 
      .contact-box.clr
        .contact-pic.left 
          %img{:src => "img/contact-pic.png", :alt => ""} 
        .contact-txt.left
          %h3= t 'contact.cloud_header'
          %p= t 'contact.cloud_paragraph'      
    .col2 
      %form{:action => ""} 
        %ul 
          %li
            %input{:type => "text", :name => "", :placeholder => t('contact.form_name')} 
          %li
            %input{:type => "text", :name => "", :placeholder => t('contact.form_mail')} 
            %li
              %textarea{:name => "", :cols => "30", :rows => "10", :placeholder => t('contact.form_msg')} 
            %li
              %input{:type => "submit", :value => t('contact.form_send')} 